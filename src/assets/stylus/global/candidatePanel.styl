section.candidatePanel
    position fixed
    z-index 10
    top 0
    right 0
    bottom 0
    margin 40px
    width 25vw
    border 1px solid #747474
    background #F1F1F1
    display flex
    flex-direction column
    transform translateX(40px)
    opacity 0
    will-change opacity, transform
    transition opacity .3s ease-in-out, transform .3s ease-in-out
    &.open
        opacity 1
        transform translateX(0px)
    .content
        padding 20px 20px 0
        .head
            display flex
            align-items center
            justify-content space-between
            h1
                margin 0 24px 0 0
        h3
            margin 16px 0 8px
            font-weight normal
            font-size 16px
        .ct-line
            stroke #1848A7
    .iframeBox
        width 100%
        flex 1
        overflow hidden
        iframe
            width 100%
            height calc(100% + 232px)
            transform translateY(-232px)